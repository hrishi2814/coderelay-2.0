generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Team {
  id           String @id @default(uuid())
  name         String
  currentCode  String @db.Text // The code currently in the editor
  currentTurn  String // User ID of who is coding right now
  turnExpiresAt DateTime
}